<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_A"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.408"
            app:layout_constraintVertical_bias="0.017" android:textStyle="normal|bold"
            tools:style="@android:style/Widget.Material.Light.AutoCompleteTextView" android:text="0"
            android:textAlignment="center" tools:textSize="18sp" android:hint="Операнд 1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_B"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.392"
            app:layout_constraintVertical_bias="0.342" android:textStyle="normal|bold"
            tools:style="@android:style/Widget.Material.Light.AutoCompleteTextView" android:text="0"
            android:textAlignment="center" tools:textSize="18sp" android:hint="операнд 2"/>
    <TextView
            android:text="Result"
            android:layout_width="210dp"
            android:layout_height="31dp"
            android:id="@+id/textView_Result" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.53" tools:textSize="18sp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.512"
            tools:textColor="@android:color/black"/>
    <Button
            android:text="+"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:id="@+id/button_Plus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.25" app:layout_constraintVertical_bias="0.168"
            tools:textAlignment="center" tools:textSize="24sp" android:onClick="Plus"/>
    <Button
            android:text="-"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:id="@+id/button_Minus" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.422" app:layout_constraintVertical_bias="0.168"
            tools:textAlignment="center" tools:textSize="24sp" android:onClick="Minus"/>
    <Button
            android:text="*"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:id="@+id/button_Multiply" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.59" app:layout_constraintVertical_bias="0.168"
            tools:textAlignment="center" tools:textSize="24sp" android:onClick="Multiple"/>
    <Button
            android:text="/"
            android:layout_width="53dp"
            android:layout_height="56dp"
            android:id="@+id/button_Divide" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.758" app:layout_constraintVertical_bias="0.168"
            tools:textAlignment="center" tools:textSize="24sp" android:onClick="Divide"/>
</android.support.constraint.ConstraintLayout>